{
  "openapi": "3.0.0",
  "info": {
    "title": "Appointment Service API",
    "version": "1.0",
    "description": "API endpoints for managing patient appointments"
  },
  "paths": {
    "/appointments": {
      "post": {
        "summary": "Book new appointment",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/BookAppointmentDto" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Appointment booked",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Appointment" } } }
          }
        }
      }
    },
    "/appointments/{id}": {
      "get": {
        "summary": "Fetch appointment by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Appointment data",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Appointment" } } }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BookAppointmentDto": {
        "type": "object",
        "properties": {
          "patientId": { "type": "string" },
          "doctorId": { "type": "string" },
          "timeSlot": { "type": "string" },
          "reason": { "type": "string" }
        }
      },
      "Appointment": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "patientId": { "type": "string" },
          "doctorId": { "type": "string" },
          "timeSlot": { "type": "string" },
          "reason": { "type": "string" },
          "status": { "type": "string" }
        }
      }
    }
  }
}
